@using X.PagedList
@using X.PagedList.Mvc.Core

@model IPagedList<InventoryFoodProject.Models.Food>
@{
    ViewData["Title"] = "Food Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Food Name</th>
        <th>Price</th>
        <th>Stock</th>
        <th>Category Name</th>
        <th>Delete</th>
        <th>Update</th>
        <th>Details</th>
    </tr>
    @foreach (var item in Model)
    {
            <tr>
                <td>@item.FoodID</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>@item.Category?.CategoryName</td>
                <td><a href="/Food/RemoveFood/@item.FoodID" class="btn btn-danger">Delete</a></td>
                <td><a href="/Food/FoodGet/@item.FoodID" class="btn btn-warning">Update</a></td>
                <td><a href="#" class="btn btn-info">Detail</a></td>
            </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new {page}))
<a href="/Food/FoodAdd" class="btn btn-primary">New Food</a>
